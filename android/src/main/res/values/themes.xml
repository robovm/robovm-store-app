<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dimension -->
    <dimen name="btn_corner_radius">2dp</dimen>

    <!-- Colors -->
    <color name="main_background">#eeeeee</color>
    <color name="action_bar_title_color">@android:color/white</color>
    <color name="ab_background">#93C624</color>
    <color name="ab_bottom_shadow_1">#30000000</color>
    <color name="ab_bottom_shadow_2">#20000000</color>

    <color name="btn_bg_color">@color/robo_green</color>
    <color name="btn_bg_shadow_color">#47A035</color>

    <!-- Styles -->
    <style name="RoboActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/RoboActionBarStyle</item>
        <item name="android:windowBackground">@color/main_background</item>
    </style>

    <style name="RoboActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/RoboActionBarTitleStyle</item>
        <item name="android:background">@drawable/ab_background</item>
        <item name="android:backgroundStacked">@drawable/ab_background</item>
        <item name="android:displayOptions">showTitle|homeAsUp|showHome</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="RoboActionBarTitleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/action_bar_title_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoboTitleText">
        <item name="android:textColor">#414141</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:translationY">-50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="RoboSubtitleText">
        <item name="android:textColor">#515151</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:translationY">-50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="RoboButton">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
